<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapps"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Activity.InfoAkunActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ubah Info Akun"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/txteditusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/broderedittext"
        android:hint="Username"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"/>

    <EditText
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/txteditfullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/broderedittext"
        android:hint="Nama Lengkap"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"/>

    <EditText
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/txteditpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/broderedittext"
        android:hint="Password Baru"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:padding="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btneditinfo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/borderbutton"
            android:text="Ubah Info"
            android:textColor="@android:color/white"
            android:paddingLeft="10dp"
            android:layout_marginEnd="15dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>

        <Button
            android:id="@+id/btnbataledit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/borderbuttonback"
            android:text="Kembali"
            android:textColor="@android:color/black"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>

    </LinearLayout>

</LinearLayout>